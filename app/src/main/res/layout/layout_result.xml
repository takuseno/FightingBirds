<?xml version="1.0" encoding="utf-8"?>

<FrameLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <jp.gr.java_conf.androtaku.fightingbirds.ResultGLSurfaceView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/result_glview"/>

<RelativeLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Facebook  "
        android:id="@+id/facebook"
        android:layout_below="@+id/score_text"
        android:layout_toRightOf="@+id/newRecordText"
        android:layout_toEndOf="@+id/newRecordText"
        android:background="@drawable/normal_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Twitter  "
        android:id="@+id/twitter"
        android:layout_toStartOf="@+id/newRecordText"
        android:background="@drawable/normal_button"
        android:layout_alignTop="@+id/facebook"
        android:layout_toLeftOf="@+id/newRecordText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCORE"
        android:textSize="80dp"
        android:id="@+id/score_text"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Title  "
        android:id="@+id/title_button"
        android:background="@drawable/normal_button"
        android:layout_below="@+id/score_text"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="New Record!"
        android:textColor="#ff0000"
        android:textStyle="bold"
        android:id="@+id/newRecordText"
        android:layout_above="@+id/score_text"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>
</RelativeLayout>

</FrameLayout>